#!/usr/bin/env bash

dna-echo() {

    if [ $# -eq 0 ]
    then
        echo "${r-}${b-}No argument supplied for function | ${n-}${FUNCNAME[0]}${r-} |.${x-}"
        echo
        echo "${b-}Exiting...${x-}"
        echo
        sleep 1
        exit
    fi

    while getopts ":m:e:" arguments; do
        case $arguments in
            m)	message="$OPTARG"
                ;;
            e)  error_message="$OPTARG"
                ;;
            \?)	echo "${r-}${b-}Invalid option | -$OPTARG | for function | ${FUNCNAME[0]} |.${x-}"
                echo
                echo "${b-}Exiting...${x-}"
                echo
                sleep 1
                exit
                ;;
        esac
    done
    OPTIND=1

    if [ -z "${message-}" ] && [ -z "${error_message-}" ]
	then
		echo "${r-}${b-}Argument | ${n-}message [-m]${r-} | or | ${n-}error_message [-e]${r-} | must be supplied for function | ${n-}${FUNCNAME[0]}${r-} |.${x-}"
        echo
        echo "${b-}Exiting...${x-}"
        echo
        sleep 1
        exit
	fi

    if [ ! -z "${message-}" ] && [ ! -z "${error_message-}" ]
	then
		echo "${r-}${b-}Only one argument [| ${n-}message [-m]${r-} | or | ${n-}error_message [-e]${r-} |] can be supplied for function | ${n-}${FUNCNAME[0]}${r-} |.${x-}"
        echo
        echo "${b-}Exiting...${x-}"
        echo
        sleep 1
        exit
	fi

    if [ ! -z "${message-}" ]
    then
        if [ ! "${silent-null}" = "y" ]
        then
            echo "${b-}${message}${x-}"
            echo
        fi
    elif [ ! -z "${error_message-}" ]
    then
        echo "${r-}${b-}${error_message}${x-}"
        echo
    fi

    unset message error_message

}
