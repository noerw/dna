#!/usr/bin/env bash

dna-echo() {

    if [ $# -eq 0 ]
    then
        dna-echo "${r-}No argument supplied for function | ${n-}${FUNCNAME[0]}${r-} |."
        dna-exit
    fi

    while getopts ":m:" arguments; do
        case $arguments in
            m)	message="$OPTARG"
            ;;
            \?)	echo "${r-}${b-}Invalid option | -$OPTARG | for function | ${FUNCNAME[0]} |.${x-}"
            echo
            dna-exit
            ;;
        esac
    done
    OPTIND=1

    if [ -z "${message-}" ]
	then
		dna-echo -m "${r-}Argument | ${n-}message [-d]${r-} | must be supplied for function | ${n-}${FUNCNAME[0]}${r-} |."
		dna-exit
	fi

    if [ ! "${silent-null}" = "y" ]
    then
        echo "${b-}${message}${x-}"
        echo
    fi

    unset message

}
